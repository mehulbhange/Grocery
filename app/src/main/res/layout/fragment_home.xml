<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/home_fragment"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#43CDC1"
            android:padding="5dp"
            android:text="Shop By Categories"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

                <ImageButton
                    android:id="@+id/btnfruits"
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:layout_weight="1"
                    />

                <ImageButton
                    android:id="@+id/btnVegitables"
                    android:layout_width="match_parent"
                    android:layout_height="140dp"

                    android:layout_weight="1"
                    />

                <ImageButton
                    android:id="@+id/btnJuices"
                    android:layout_width="match_parent"
                    android:layout_height="140dp"

                    android:layout_weight="1"
                    />



            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <ImageButton
                    android:id="@+id/btnBiscuits"
                    android:layout_width="match_parent"
                    android:layout_height="140dp"

                    android:layout_weight="1"
                    />

                <ImageButton
                    android:id="@+id/btnColddrinks"
                    android:layout_width="match_parent"
                    android:layout_height="140dp"

                    android:layout_weight="1"
                    />

                <ImageButton
                    android:id="@+id/btnOralcare"
                    android:layout_width="match_parent"
                    android:layout_height="140dp"

                    android:layout_weight="1"
                    />


            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >
                <ImageButton
                    android:id="@+id/btnDetergentpowder"
                    android:layout_width="match_parent"
                    android:layout_height="140dp"

                    android:layout_weight="1"
                    />

                <ImageButton
                    android:id="@+id/btnBathingessentials"
                    android:layout_width="match_parent"
                    android:layout_height="140dp"

                    android:layout_weight="1"
                    />

            </TableRow>

        </TableLayout>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>